def sort(list) do
  if List.length(list) <= 1
  then
    list
  else
    let pivot = List.get(list, 0)
    let rest = List.sublist(list, 1, List.length(list) - 1)
    let h1 = List.filter(sort(rest), Integer.gte(_, pivot))
    let h2 = List.filter(sort(rest), Integer.lt(_, pivot))
    List.append(List.append(h1, [pivot]), h2)
  end
end

def main do
  let list = [10, 3, 4, 1, 5, 2, 13]
  IO.print(sort(list))
end

